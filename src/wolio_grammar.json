            "Aksen kata pada suku kedua dari belakang (penultimate)"
        ]
    },
    "morphology": {
        "verb_prefixes": {
            "ko-": {
                "meaning": "memiliki, memakai, dalam keadaan",
                "examples": [
                    "kobulu (berbulu)",
                    "kobaju (memakai baju)",
                    "kooni (berbicara)"
                ],
                "type": "intransitif"
            },
            "ma-": {
                "meaning": "dalam keadaan, bersifat",
                "examples": [
                    "maluntu (malas)",
                    "makasu (dekat)",
                    "matau (tahu)",
                    "masodo (panas)"
                ],
                "type": "intransitif"
            },
            "po-/pe-": {
                "meaning": "aksi tubuh, aksi berulang",
                "examples": [
                    "potawa (tertawa)",
                    "pomea (menguap)",
                    "pomeke (batuk)"
                ],
                "type": "intransitif"
            },
            "me-": {
                "meaning": "aksi/keadaan berkelanjutan",
                "examples": [
                    "mesumpu (selalu minum)",
                    "mentaqi (selalu menangis)",
                    "mengkole (selalu tidur)"
                ],
                "type": "intransitif"
            },
            "ka-": {
                "meaning": "dengan reduplikasi = aksi berulang/terus menerus",
                "examples": [
                    "kaliqkaliqka (berjalan kaki)",
                    "kauncuuncura (terus duduk)"
                ],
                "type": "intransitif"
            },
            "ti-": {
                "meaning": "masuk ke dalam keadaan",
                "examples": [
                    "tiumba (muncul)",
                    "tidoie (berbaring)"
                ],
                "type": "intransitif"
            },
            "poma-": {
                "meaning": "tanpa kontrol, ke segala arah",
                "examples": [
                    "pomabebe (memukul ke segala arah)",
                    "pomakande (makan sembarangan)"
                ],
                "type": "transitif/intransitif"
            }
        },
        "suffixes": {
            "-mo": "sudah, telah (aspek perfektif)",
            "-po": "dulu, belum (aspek prospektif)",
            "-aka": "membuat, menyebabkan (kausatif)",
            "-a": "akhiran objek",
            "-i": "akhiran lokatif/direktif"
        },
        "reduplication": {
            "rule": "Duplikasi sampai vokal kedua",
            "examples": [
                "baa → baabaa",
                "mboloqa → mbolomboloqa",
                "batu → batubatu"
            ],
            "meaning": "intensif, berulang, jamak"
        },
        "prenasalization": {
            "rule": "k→ngk, t→nt, p→mp, c→nc",
            "context": "Terjadi dengan prefix tertentu atau dalam komposisi kata",
            "examples": [
                "sa- + baa = sambaa",
                "me- + kole = mengkole"
            ]
        }
    },
    "syntax": {
        "word_order": "SVO (Subjek-Verba-Objek)",
